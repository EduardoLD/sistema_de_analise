<style>

    body, html {
        height: 100%;
        margin: 0;
    }

    #div_card_gestao {
        background-color: #ffffff;
        border: 2px solid #B9B9B9;
        border-radius: 15px;
        width: 50%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 15px;
        box-shadow: 3px 3px 3px 3px #B9B9B9;
    }

    #div_botao_cadastro_gestao button {
        font-weight: bold;
        font-size: 24px;
    }

</style>

<div id="div_card_gestao">
    {% if existe_gestao %}
        <h1>existe gestao</h1>
    {% else %}
        <div id="div_botao_cadastro_gestao" class="d-grid gap-2">
            <button type="button" class="btn btn-primary" id="botao_cadastro_gestao" onclick="window.location='?p={{ p }}&op=inclusao'">Cadastrar Nova Gest√£o</button>
        </div>
    {% endif %}
</div>