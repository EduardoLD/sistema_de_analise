<style>

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    #div_card_gestao {
        background-color: #ffffff;
        border: 2px solid #B9B9B9;
        border-radius: 15px;
        width: 80%;
        margin: 20px auto;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .dashboard {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: space-around;
        margin-top: 20px;
    }

    .card {
        background-color: #fff;
        border: 2px solid #B9B9B9;
        border-radius: 8px;
        width: calc(25% - 20px);
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        display: inline-block;
    }

    .card i {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .card h3 {
        margin: 10px 0;
    }

    .card p {
        margin: 0;
        font-weight: bold;
        color: #007bff;
    }

    #div_lista_apostas {
        margin-top: 20px;
        gap: 10px;
        justify-content: space-around;
        border: 1px solid red;
        border-radius: 5px;
        width: 100%;
        height: 40px;
    }

</style>

<div id="div_card_gestao">
    {% if gestao %}
        <div id="div_dados_gestao" class="dashboard">
            <div class="card">
                <i class="far fa-calendar-alt"></i>
                <h3>Data de Início</h3>
                <p>{{ gestao.dat_inicio|date('d/m/Y') }}</p>
            </div>

            <div class="card">
                <i class="fas fa-money-bill-wave"></i>
                <h3>Banca Inicial / Atual</h3>
                <p>R$ {{ gestao.flo_banca_inicial|number_format(2, ',', '.') }} / R$ {{ gestao.flo_banca_final|number_format(2, ',', '.') }}</p>
            </div>

            <div class="card">
                <i class="fas fa-chart-line"></i>
                <h3>Stoploss Diário</h3>
                <p>{{ gestao.flo_stoploss_porc|number_format(2, ',', '.') }}% (R$ {{ gestao.flo_stoploss_val|number_format(2, ',', '.') }})</p>
            </div>

            <div class="card">
                <i class="fas fa-bullseye"></i>
                <h3>Meta Diária</h3>
                <p>{{ gestao.flo_meta_diaria_porc|number_format(2, ',', '.') }}% (R$ {{ gestao.flo_meta_diaria_val|number_format(2, ',', '.') }})</p>
            </div>
        </div>
        <div id="div_lista_apostas">
        </div>
    {% else %}
        <div id="div_botao_cadastro_gestao">
            <button type="button" id="botao_cadastro_gestao" onclick="window.location='?p={{ p }}&op=inclusao'">Cadastrar Nova Gestão</button>
        </div>
    {% endif %}
</div>
